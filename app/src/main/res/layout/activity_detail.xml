<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop" />
 //Main Name

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Name :"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/text1"
        app:layout_constraintTop_toBottomOf="@id/image_iv"
        />
    <TextView
        android:id="@+id/main_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/text1"
        app:layout_constraintTop_toBottomOf="@id/image_iv"
        />
//Also Known
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_also_known_as_label"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/text2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        />
    <TextView
        android:id="@+id/also_known_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/text2"
        app:layout_constraintTop_toBottomOf="@id/main_name_tv"
        />
//ingredients
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_ingredients_label"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/text3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        />
    <TextView
        android:id="@+id/ingredients_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/also_known_tv"
        />
    //Place Of Origin
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/text3"
            android:id="@+id/p2"
            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_place_of_origin_label"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/text4"
        app:layout_constraintTop_toBottomOf="@id/p2"
        />
    <TextView
        android:id="@+id/origin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text4"
        app:layout_constraintTop_toBottomOf="@id/p2"
        />
        </android.support.constraint.ConstraintLayout>
      //Description
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sc"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/p2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/p1">
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_description_label"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/text5"
        app:layout_constraintTop_toBottomOf="@id/p1"
        />

        <TextView
        android:id="@+id/description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/p1"
            app:layout_constraintLeft_toRightOf="@id/text5"
            app:layout_constraintRight_toRightOf="@id/p1"
            />
            </LinearLayout>
        </ScrollView>

</android.support.constraint.ConstraintLayout>
</ScrollView>
